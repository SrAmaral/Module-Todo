<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="main">
                <block name="blog.list" template="Webjump_Todo::todo.phtml">
                    <arguments>
                        <argument name="todo_vm" xsi:type="object">Webjump\Todo\ViewModel\Todo</argument>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="todo_component" xsi:type="array">
                                    <item name="component" xsi:type="string">Webjump_Todo/js/todo_component</item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
        </referenceContainer>

    </body>
</page>
